# ===========================================
# My Agentic Swarm - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values.
# NEVER commit .env files with real secrets.

# MongoDB
MONGODB_URI=mongodb://localhost:27017/agentic_swarm

# API Server
API_PORT=3001
API_HOST=0.0.0.0
NODE_ENV=development

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173

# JWT / OIDC (placeholder - see ADR-001)
JWT_SECRET=change-me-in-production
JWT_ISSUER=agentic-swarm
JWT_AUDIENCE=agentic-swarm-api

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info

# Groq API (for orchestrator agents)
GROQ_API_KEY=your_groq_api_key_here

# Agent Configuration
ARCHITECT_MODEL=llama-3.3-70b-versatile
WORKER_MODEL=llama-3.3-70b-versatile
